@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <BlazoredToasts Position="ToastPosition.TopCenter" Timeout="2" />

        <div class="flex flex-col gap-4">
            <NavMenu />

            <main class="px-2">
                @Body
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
</AuthorizeView>

