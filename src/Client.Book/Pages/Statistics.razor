@page "/statistics"

<h2>Statistics</h2>

<div class="col col-sm col-md-10 col-lg-8 col-xl-6 col-xxl-4">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>State</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Reading</th>
                <td>@Reading</td>
            </tr>
            <tr>
                <th>Want to read</th>
                <td>@WantToRead</td>
            </tr>
            <tr>
                <th>Read</th>
                <td>@Read</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <td>@Total</td>
            </tr>
        </tfoot>
    </table>
</div>