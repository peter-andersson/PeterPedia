@page "/read"

<h2>Read</h2>

<div class="col-12 w-auto">
    <EditForm class="row align-items-center" EditContext="@SearchContext" OnSubmit="@LoadDisplayBooks">
        <div class="col-auto w-75">
            <label class="visually-hidden" for="search">Filter by title</label>
            <InputText id="search" class="form-control" @bind-Value="CurrentSearch" placeholder="Filter by title" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </EditForm>
</div>

<div class="card-group mt-5">
    @foreach (var book in BookList)
    {
        <BookView Book=@book ReturnUrl="read"></BookView>
    }
</div>
