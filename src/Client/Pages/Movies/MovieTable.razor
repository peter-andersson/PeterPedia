@if ((Movies is null) || (Movies.Count == 0))
{
    <p>Start by adding some movies.</p>
}
else
{
    <table class="table table-dark table-striped table-hover">
    <thead class="bg-slate-900">
        <tr>
            <th>Title</th>
            <th>Original title</th>
            <th>Original language</th>
            <th>Runtime</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Movies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.OriginalLanguage</td>
                    <td>@movie.OriginalLanguage</td>
                    <td>@movie.RunTime</td>
                    <td>
                        <a class="link-success" href="movies/edit/@movie.Id/@ReturnUrl">Edit</a>
                        <a class="ml-2 link-danger" href="movies/delete/@movie.Id/@ReturnUrl">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
