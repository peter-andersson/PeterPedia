<div id="edit-movie-dialog" class="modal fade show" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit movie</h5>
            </div>
            <div class="modal-body">
                @if (Movie is null)
                {
                    <p>No movie to edit...</p>        
                }
                else
                {
                    <div class="row">
                        <div class="col-12">
                            <label for="movie-title" class="form-label">Title</label>
                            <input id="movie-title" class="form-control" type="text" @bind="@Movie.Title"></input>
                        </div>
                        <div class="col-12">
                            <label class="form-label">OriginalTitle: @Movie.OriginalTitle</label>
                        </div>
                        <div class="col-6">
                            <label class="form-label">OriginalLanguage: @Movie.OriginalLanguage</label>
                        </div>
                        <div class="col-6">
                            <label class="form-label">RunTime: @Movie.RunTime</label>
                        </div>                        
                        <div class="col-12">
                            <label class="form-label">ReleaseDate: @Movie.ReleaseDate?.ToString("dd MMM yyyy")</label>
                        </div>                        
                        <div class="col-12">
                            <label for="movie-date" class="form-label">Watch date</label>
                            <input type="date" id="movie-date" class="form-control" @bind="@Movie.WatchedDate" @bind:format="dd MMM yyyy"></input>
                        </div>                                               
                    </div>
                    <p class="mt-2">
                        <a href="@Movie.TheMovieDbUrl.ToString()" target="_blank">View on TMDb</a>
                        <a class="ml-2" href="@Movie.ImdbUrl.ToString()" target="_blank">View on IMDB</a>
                    </p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" @onclick="Save" disabled=@IsTaskRunning>Save</button>
            </div>
        </div>
    </div>
</div>