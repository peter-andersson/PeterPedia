<Dialog Id="@Id" Title="Delete book">
    <Body>
        @if (Book is null)
        {
            <p>No book to delete...</p>        
        }
        else
        {
            <p class="text-danger">Do you really want to delete this book? This action cannot be undone.</p>
            <p>
                Title: <span class="font-bold">@Book.Title</span>
            </P>                 
        }
    </Body>
    <Footer>
        <button type="button" class="btn btn-secondary" @onclick="Cancel" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" @onclick="Delete" disabled=@IsTaskRunning>Delete</button>
    </Footer>
</Dialog>