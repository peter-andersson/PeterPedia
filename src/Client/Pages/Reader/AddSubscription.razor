<Dialog Id="@Id" Title="Add subscription">
    <Body>
        <EditForm class="row align-items-center" EditContext="@AddContext" OnSubmit="@(async () => await Add())">
            <div class="mb-3">
                <label for="search">URL to subscription</label>
                <InputText id="search" class="form-control flex-grow-1" @bind-Value="NewSubscriptionUrl" placeholder="URL to subscription" />
            </div>
        </EditForm>
    </Body>
    <Footer>
        <button type="button" class="btn btn-secondary" @onclick="Close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" @onclick="Add" disabled=@IsTaskRunning>Add</button>
    </Footer>
</Dialog>