<Dialog Id="@Id" Title="Edit subscription">
    <Body>
        @if (Subscription is null)
        {
            <p>No subscription to edit...</p>        
        }
        else
        {
            <EditForm class="row align-items-center" Model="@Subscription" OnSubmit="@Save">
                <div class="mb-3">
                    <label class="control-label">Title</label>
                    <InputText class="form-control" type="text" @bind-Value="@Subscription.Title"></InputText>
                </div>
                <div class="mb-3">
                    <label class="control-label">Update interval in minutes(5 to 60)</label>
                    <InputNumber class="form-control" @bind-Value="@Subscription.UpdateIntervalMinute"></InputNumber>
                </div>
            </EditForm>
        }
    </Body>
    <Footer>
        <button type="button" class="btn btn-secondary" @onclick="Cancel" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" @onclick="Save" disabled=@IsTaskRunning>Save</button>
    </Footer>
</Dialog>