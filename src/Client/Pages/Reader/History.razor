@page "/reader/history"

<div class="row mt-2">
    <div class="col">
        <a class="btn btn-primary" href="/reader">Return to reader</a>
    </div>
</div>

<div class="row mt-2">
    <div class="list-group">
        @foreach (Article article in Articles)
        {
            <a href="@article.Url" class="list-group-item list-group-item-action">@article.Title - @article.ReadDate?.ToString("d MMM yyyy HH:mm:ss")</a>
        }
    </div>
</div>
