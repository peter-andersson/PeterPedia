<li class="list-group-item">
    <span>@($"{Episode.EpisodeNumber} - {Episode.Title} - {Episode.AirDate?.ToString("MMM d, yyyy")}")</span>
    @if (Episode.Watched)
    {
        <button class="btn btn-primary float-end" @onclick="@(async() => await UnwatchEpisodeAsync())" disabled="@IsTaskRunning">Not watched</button>
    }
    else
    {
        <button class="btn btn-primary float-end" @onclick="@(async() => await WatchEpisodeAsync())" disabled="@IsTaskRunning">Watched</button>
    }
</li>
