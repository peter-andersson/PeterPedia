@page "/videos/player/{id:int}"

@if (Video is null)
{
    <h1>Video not found</h1>
}
else
{
    <h1>@Video.Title</h1>
    <h2>Duration: @Video.Duration.ToString(@"hh\:mm\:ss")</h2>

    <div class="container">
        <video class="w-1/2 aspect-video" controls>
            <source src="@Video.Url" type="@Video.Type">
            
            Your browser does not support the video tag.
        </video>
    </div>

    <button class="btn btn-red mt-2" @onclick="Delete">Remove</button>
}