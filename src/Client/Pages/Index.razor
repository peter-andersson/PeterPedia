@page "/"

@if (Links == null)
{
    <Loader Text="Loading links..."/>
}
else
{
    <EditLink Id="@LinksElement" OnClose="DialogCloseAsync" Links="@Links"></EditLink>

    <div class="row mt-2">
        <div class="col-12">
            <a class="link-dark" href="javascript:void(0)" @onclick="EditAsync">Edit</a>
        </div>
    </div>

    <div class="row mt-2">
        @foreach (var link in Links)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <a class="fs-2 link-dark" href="@link.Url">@link.Title</a>
            </div>
        }
    </div>
}
