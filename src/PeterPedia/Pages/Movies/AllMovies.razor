@page "/movies/all"

<h4 class="mt-2">All movies</h4>

<div class="d-flex mb-2">
    <a class="btn btn-primary flex-shrink-0 me-2" href="/movies">Watchlist</a>
    <input type="text" class="form-control" @bind="Filter" @bind:event="oninput" @onkeydown="InputKeyDown" placeholder="Filter">
</div>

@if (NotFound)
{
    <h5>No movie found!</h5>
}
else if (FilterMovieList.Count > 0)
{
    <div class="row row-cols-1 row-cols-md-4 g-4 mt-2">
        @foreach (Movie movie in FilterMovieList)
        {
            <MovieView Movie="@movie" />
        }
    </div>
}
else
{
      <div class="row row-cols-1 row-cols-md-4 g-4 mt-2">
        @foreach (Movie movie in MovieList)
        {
            <MovieView Movie="@movie" />
        }
    </div>
}
