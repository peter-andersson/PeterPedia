@page "/tv"

<EpisodesMeny></EpisodesMeny>

<h4 class="mt-2">Episodes</h4>

<div class="row row-cols-1 row-cols-md-4 g-4 mb-2">
    @foreach (Show show in WatchList)
    {
      <div class="show me-2 position-relative" role="button" @onclick="() => OpenShow(show)">
        <span class="badge rounded-pill bg-primary position-absolute episode-count">@show.UnwatchedEpisodeCount</span>
        <img src="/images/episodes/@($"{show.Id}.jpg")" class="show-poster" alt="@show.Title">
      </div>
    }
</div>

