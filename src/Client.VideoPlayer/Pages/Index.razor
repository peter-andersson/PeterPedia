@page "/"

<table class="table-fixed border-collapse w-screen">
    <thead>
        <tr>
            <th class="w-4/5 border-b border-gray-500 text-left pl-1">Title</th>
            <th class="w-1/5 border-b border-gray-500">Duration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Videos)
        {
            <tr>
                <td class="border-t border-b border-gray-500 pl-1"><a href="player/@item.Id">@item.Title</a></td>
                <td class="border-t border-b border-gray-500 text-center">@item.Duration.ToString(@"hh\:mm\:ss")</td>
            </tr>
        }
    </tbody>
</table>