@page "/"

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Videos)
        {
            <tr>
                <td><a class="text-white" href="player/@item.Id">@item.Title</a></td>
                <td>@item.Duration.ToString(@"hh\:mm\:ss")</td>
            </tr>
        }
    </tbody>
</table>