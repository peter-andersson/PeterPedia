@page "/"
@attribute [Authorize(Roles = "admin")]

<h4 class="mt-2">Movies</h4>

@if (Loading)
{
    <Spinner Text="Loading..." />
}
else
{
    <div class="row row-cols-1 row-cols-md-4 g-4 mt-2">
        @foreach (Movie movie in MovieList)
        {
            <MovieView Movie="@movie" />
        }
    </div>
}



