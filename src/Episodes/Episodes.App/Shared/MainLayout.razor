@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <BlazoredToasts Position="ToastPosition.TopCenter" Timeout="2" />

        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
      <Login />
    </NotAuthorized>
</AuthorizeView>

