@inherits LayoutComponentBase

<BlazoredToasts Position="ToastPosition.BottomRight" Timeout="5" />

<div class="container-fluid">
    <NavMenu Title="Episodes" Items="@Items" />

    <div class="main mt-3">
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code {
    public List<MenuItem> Items = new List<MenuItem>();

    protected override void OnInitialized()
    {
        Items.Add(new MenuItem()
        {
            Display = "Episodes",
            Url = string.Empty,
            IconType = Common.IconType.ViewList,
        });

        Items.Add(new MenuItem()
        {
            Display = "All shows",
            Url = "shows",
            IconType = Common.IconType.Collection,
        });

        Items.Add(new MenuItem()
        {
            Display = "Add show",
            Url = "add",
            IconType = Common.IconType.PlusCircle,
        });

        Items.Add(new MenuItem()
        {
            Display = "Statistics",
            Url = "statistics",
            IconType = Common.IconType.BarChart,
        });
    }
}