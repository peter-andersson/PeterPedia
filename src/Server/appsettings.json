{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Quartz": {
    "RemoveArticleJob": "0 0 0 * * ?",
    "RefreshArticleJob": "0 */5 * * * ?",
    "VideoJob": "0 */10 * * * ?",
    "ShowUpdateJob": "0 */5 * * * ?",
    "PhotoJob": "0 0/5 * * * ?",
    "MovieUpdateJob": "0 */5 * * * ?"
  },
  "VideoPath": "/video",
  "ImagePath": "/images",
  "PhotoPath": "/photos",
  "AllowedHosts": "*"
}



