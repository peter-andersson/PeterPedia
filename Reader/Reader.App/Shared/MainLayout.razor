@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="grid grid-cols-12 gap-4">
            <div class="col-span-2">
                <NavMenu />
            </div>

            <main class="col-start-3 col-span-10">
              @Body
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
      <Login />
    </NotAuthorized>
</AuthorizeView>

