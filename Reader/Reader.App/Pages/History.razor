@page "/history"
@attribute [Authorize(Roles = "admin")]

<h4 class="mt-2">History</h4>

@if (Loading)
{
    <Spinner Text="Loading..." />
}
else
{
    <div class="row mt-2">
        <div class="list-group">
            @foreach (HistoryArticle article in Articles)
            {
                <a href="@article.Url" class="list-group-item list-group-item-action">@article.Title - @article.ReadDate.ToString("d MMM yyyy HH:mm:ss")</a>
            }
        </div>
    </div>
}
